<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
tools:context="com.example.admin.androidlabs.MessageFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Message Here"
    android:id="@+id/messageView"
    android:textColor="@color/colorPrimary"
    android:textStyle="italic"
    android:textSize="23sp"
    android:layout_alignParentTop="true" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ids"
    android:id="@+id/msgId"
    android:layout_below="@+id/messageView"
    android:layout_alignStart="@+id/messageView"
    android:textColor="@color/colorPrimary"
    android:textStyle="italic"
    android:textSize="23sp"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DELETE THE MESSAGE"
    android:id="@+id/deleteMsg"
    android:layout_gravity="left|bottom"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:textColor="@color/colorPrimary"
    android:textStyle="italic"
    android:textSize="23sp"/>
</RelativeLayout>